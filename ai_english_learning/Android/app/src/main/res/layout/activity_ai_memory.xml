<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary">

    <!-- 工具栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/words_module"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 功能介绍卡片 -->
            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/TitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AI联想记忆"
                        android:textAlignment="center"
                        android:drawableStart="@drawable/ic_brain"
                        android:drawablePadding="12dp"
                        android:gravity="center" />

                    <TextView
                        style="@style/CaptionTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="选择2-8个单词，AI将生成包含这些单词的记忆句子"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 已选单词显示区域 -->
            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        style="@style/SubtitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="已选单词"
                        android:layout_marginBottom="12dp"
                        android:drawableStart="@drawable/ic_star"
                        android:drawablePadding="8dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/selected_words_chip_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacing="8dp"
                        app:lineSpacing="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="提示：点击单词可以移除选择"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 单词选择列表 -->
            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        style="@style/SubtitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="选择单词"
                        android:layout_marginBottom="12dp"
                        android:drawableStart="@drawable/ic_words"
                        android:drawablePadding="8dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/words_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:nestedScrollingEnabled="true" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 生成按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/generate_sentence_btn"
                style="@style/PrimaryButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="请选择至少2个单词"
                android:textSize="16sp"
                android:enabled="false"
                android:drawableStart="@drawable/ic_brain"
                android:drawablePadding="8dp" />

            <!-- 加载进度 -->
            <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="16dp"
                android:visibility="gone" />

            <!-- 生成结果卡片 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/result_card"
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/SubtitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AI生成的记忆句子"
                        android:layout_marginBottom="16dp"
                        android:drawableStart="@drawable/ic_context"
                        android:drawablePadding="8dp"
                        android:textColor="@color/accent_green" />

                    <!-- 英文句子 -->
                    <TextView
                        android:id="@+id/generated_sentence_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Generated sentence will appear here"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/sentence_background"
                        android:padding="16dp" />

                    <!-- 中文翻译 -->
                    <TextView
                        android:id="@+id/sentence_translation_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="中文翻译将显示在这里"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="serif"
                        android:textStyle="italic" />

                    <!-- 操作按钮 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/save_btn"
                            style="@style/SecondaryButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="保存"
                            android:drawableStart="@drawable/ic_favorite"
                            android:drawablePadding="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/regenerate_btn"
                            style="@style/PrimaryButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="重新生成"
                            android:drawableStart="@drawable/ic_brain"
                            android:drawablePadding="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>