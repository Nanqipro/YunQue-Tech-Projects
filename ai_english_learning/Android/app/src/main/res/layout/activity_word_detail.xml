<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary">

    <!-- 工具栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 单词主要信息卡片 -->
            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- 单词和词性 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/word_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Word"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_blue" />

                        <TextView
                            android:id="@+id/part_of_speech_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/tag_background"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="n."
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- 音标和发音按钮 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/pronunciation_text"
                            style="@style/BodyTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="/pronunciation/"
                            android:textSize="18sp"
                            android:fontFamily="serif" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/play_pronunciation_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发音"
                            android:drawableStart="@drawable/ic_voice"
                            android:drawablePadding="8dp"
                            style="@style/SecondaryButtonStyle" />

                    </LinearLayout>

                    <!-- 中文释义 -->
                    <TextView
                        android:id="@+id/meaning_text"
                        style="@style/SubtitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="中文释义"
                        android:textSize="20sp"
                        android:layout_marginBottom="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 例句卡片 -->
            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/SubtitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="例句"
                        android:layout_marginBottom="12dp"
                        android:drawableStart="@drawable/ic_context"
                        android:drawablePadding="8dp" />

                    <TextView
                        android:id="@+id/example_text"
                        style="@style/BodyTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Example sentence here."
                        android:fontFamily="serif"
                        android:textStyle="italic"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 同义词和反义词卡片 -->
            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/SubtitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="词汇扩展"
                        android:layout_marginBottom="16dp" />

                    <!-- 同义词 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            style="@style/BodyTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="同义词: "
                            android:textStyle="bold"
                            android:textColor="@color/accent_green" />

                        <TextView
                            android:id="@+id/synonyms_text"
                            style="@style/BodyTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="synonym1, synonym2" />

                    </LinearLayout>

                    <!-- 反义词 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/BodyTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="反义词: "
                            android:textStyle="bold"
                            android:textColor="@color/error_red" />

                        <TextView
                            android:id="@+id/antonyms_text"
                            style="@style/BodyTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="antonym1, antonym2" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 操作按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mark_learned_btn"
                    style="@style/PrimaryButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="标记为已学"
                    android:drawableStart="@drawable/ic_star"
                    android:drawablePadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_to_favorite_btn"
                    style="@style/SecondaryButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="添加收藏"
                    android:drawableStart="@drawable/ic_favorite"
                    android:drawablePadding="8dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>