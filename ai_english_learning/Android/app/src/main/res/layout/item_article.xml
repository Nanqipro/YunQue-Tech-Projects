<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- 状态图标 -->
    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_reading" />

    <!-- 文章信息 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 标题行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/title_text"
                style="@style/SubtitleTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Article Title"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- 难度标签 -->
            <LinearLayout
                android:id="@+id/difficulty_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tag_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/difficulty_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="初级"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 中文标题 -->
        <TextView
            android:id="@+id/chinese_title_text"
            style="@style/CaptionTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="中文标题"
            android:layout_marginBottom="6dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- 内容预览 -->
        <TextView
            android:id="@+id/content_preview_text"
            style="@style/CaptionTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Article content preview..."
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp" />

        <!-- 阅读信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_time"
                app:tint="@color/gray_medium" />

            <TextView
                android:id="@+id/reading_time_text"
                style="@style/CaptionTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="5分钟"
                android:textSize="12sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/gray_light" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_book"
                app:tint="@color/gray_medium" />

            <TextView
                style="@style/CaptionTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="阅读"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 箭头图标 -->
    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_arrow_forward"
        app:tint="@color/gray_light" />

</LinearLayout>