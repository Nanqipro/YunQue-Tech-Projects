<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AienglishApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue_light</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_green_light</item>
        <item name="colorSecondaryVariant">@color/accent_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/gray_dark</item>
        <item name="colorSurface">@color/gray_medium</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_blue_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>