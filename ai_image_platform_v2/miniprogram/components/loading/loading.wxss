/* components/loading/loading.wxss */

.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s ease-out;
}

.loading-container {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
  min-width: 300rpx;
  max-width: 80%;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

/* 加载动画容器 */
.loading-animation {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 旋转加载器 */
.spinner {
  width: 80rpx;
  height: 80rpx;
  position: relative;
}

.spinner-dot {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background: #667eea;
  border-radius: 50%;
  animation: spinnerRotate 1.2s linear infinite;
}

.spinner-dot:nth-child(1) { transform: rotate(0deg) translate(34rpx) rotate(0deg); animation-delay: 0s; }
.spinner-dot:nth-child(2) { transform: rotate(45deg) translate(34rpx) rotate(-45deg); animation-delay: -0.15s; }
.spinner-dot:nth-child(3) { transform: rotate(90deg) translate(34rpx) rotate(-90deg); animation-delay: -0.3s; }
.spinner-dot:nth-child(4) { transform: rotate(135deg) translate(34rpx) rotate(-135deg); animation-delay: -0.45s; }
.spinner-dot:nth-child(5) { transform: rotate(180deg) translate(34rpx) rotate(-180deg); animation-delay: -0.6s; }
.spinner-dot:nth-child(6) { transform: rotate(225deg) translate(34rpx) rotate(-225deg); animation-delay: -0.75s; }
.spinner-dot:nth-child(7) { transform: rotate(270deg) translate(34rpx) rotate(-270deg); animation-delay: -0.9s; }
.spinner-dot:nth-child(8) { transform: rotate(315deg) translate(34rpx) rotate(-315deg); animation-delay: -1.05s; }

@keyframes spinnerRotate {
  0% { opacity: 1; }
  100% { opacity: 0.15; }
}

/* 脉冲加载器 */
.pulse {
  display: flex;
  gap: 8rpx;
}

.pulse-circle {
  width: 20rpx;
  height: 20rpx;
  background: #667eea;
  border-radius: 50%;
  animation: pulseScale 1.4s ease-in-out infinite both;
}

.pulse-circle:nth-child(1) { animation-delay: -0.32s; }
.pulse-circle:nth-child(2) { animation-delay: -0.16s; }
.pulse-circle:nth-child(3) { animation-delay: 0s; }

@keyframes pulseScale {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* 波浪加载器 */
.wave {
  display: flex;
  gap: 6rpx;
  align-items: flex-end;
}

.wave-bar {
  width: 8rpx;
  height: 40rpx;
  background: #667eea;
  border-radius: 4rpx;
  animation: waveStretch 1.2s ease-in-out infinite;
}

.wave-bar:nth-child(1) { animation-delay: -1.2s; }
.wave-bar:nth-child(2) { animation-delay: -1.1s; }
.wave-bar:nth-child(3) { animation-delay: -1.0s; }
.wave-bar:nth-child(4) { animation-delay: -0.9s; }
.wave-bar:nth-child(5) { animation-delay: -0.8s; }

@keyframes waveStretch {
  0%, 40%, 100% {
    transform: scaleY(0.4);
  }
  20% {
    transform: scaleY(1);
  }
}

/* 点点加载器 */
.dots {
  display: flex;
  gap: 12rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background: #667eea;
  border-radius: 50%;
  animation: dotBounce 1.4s ease-in-out infinite both;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }
.dot:nth-child(3) { animation-delay: 0s; }

@keyframes dotBounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* 圆形加载器 */
.circle {
  width: 60rpx;
  height: 60rpx;
  position: relative;
}

.circle-path {
  width: 100%;
  height: 100%;
  border: 6rpx solid #f0f0f0;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: circleRotate 1s linear infinite;
}

@keyframes circleRotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 加载文本 */
.loading-text {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  line-height: 1.4;
}

/* 进度条 */
.progress-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 取消按钮 */
.cancel-btn {
  padding: 20rpx 40rpx;
  background: #f8f9fa;
  color: #666;
  border-radius: 12rpx;
  font-size: 26rpx;
  transition: all 0.3s ease;
  border: 1rpx solid #e9ecef;
}

.cancel-btn:active {
  background: #e9ecef;
  transform: scale(0.95);
}

/* 淡入动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .loading-container {
    padding: 50rpx 30rpx;
    min-width: 260rpx;
  }
  
  .loading-text {
    font-size: 26rpx;
  }
  
  .progress-text {
    font-size: 22rpx;
  }
  
  .cancel-btn {
    padding: 18rpx 36rpx;
    font-size: 24rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .loading-container {
    background: #2a2a2a;
    color: white;
  }
  
  .loading-text {
    color: white;
  }
  
  .progress-text {
    color: #ccc;
  }
  
  .cancel-btn {
    background: #404040;
    color: #ccc;
    border-color: #555;
  }
  
  .cancel-btn:active {
    background: #555;
  }
  
  .progress-bar {
    background: #404040;
  }
}