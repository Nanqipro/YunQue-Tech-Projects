/* pages/background/background.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 图片预览区域 */
.image-preview {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.no-image {
  text-align: center;
  padding: 80rpx 40rpx;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  display: block;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.upload-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
}

.image-container {
  position: relative;
}

.image-compare {
  display: flex;
  gap: 20rpx;
}

.compare-item {
  flex: 1;
  text-align: center;
  border-radius: 12rpx;
  overflow: hidden;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
}

.compare-item.active {
  border-color: #667eea;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

.single-image {
  text-align: center;
}

.preview-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
}

.view-label {
  display: block;
  padding: 15rpx;
  background: #f8f9fa;
  color: #666;
  font-size: 24rpx;
}

.compare-item.active .view-label {
  background: #667eea;
  color: white;
}

.image-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
  justify-content: center;
}

.action-btn {
  flex: 1;
  max-width: 200rpx;
  padding: 20rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  border: 2rpx solid #e0e0e0;
  background: white;
  color: #666;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-color: transparent;
}

/* 工具区域 */
.tools-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f0f0f0;
  border: none;
  font-size: 32rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
}

.quick-tools {
  display: flex;
  gap: 20rpx;
}

.tool-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.tool-item:active {
  border-color: #667eea;
  background: #f0f4ff;
}

.tool-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.tool-name {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.tool-desc {
  display: block;
  font-size: 22rpx;
  color: #666;
}

/* 背景模板区域 */
.template-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.template-categories {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  overflow-x: auto;
}

.category-item {
  padding: 15rpx 30rpx;
  background: #f8f9fa;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.category-item.active {
  background: #667eea;
  color: white;
}

.template-list {
  height: 400rpx;
  margin-bottom: 30rpx;
}

.template-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  border-radius: 12rpx;
  overflow: hidden;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
}

.template-item.active {
  border-color: #667eea;
}

.template-preview {
  width: 100%;
  height: 150rpx;
}

.template-name {
  display: block;
  padding: 15rpx;
  background: #f8f9fa;
  font-size: 24rpx;
  color: #333;
}

.template-actions {
  text-align: center;
}

.apply-btn {
  width: 100%;
  padding: 25rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
}

.apply-btn.disabled {
  background: #ccc;
}

/* 高级调节区域 */
.advanced-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.adjustment-list {
  margin-bottom: 30rpx;
}

.adjustment-item {
  margin-bottom: 40rpx;
}

.adjustment-item:last-child {
  margin-bottom: 0;
}

.adjustment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.adjustment-label {
  font-size: 28rpx;
  color: #333;
}

.adjustment-value {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 600;
}

.adjustment-slider {
  width: 100%;
}

.advanced-actions {
  display: flex;
  gap: 20rpx;
}

.reset-btn {
  flex: 1;
  padding: 25rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

/* 操作按钮区域 */
.action-section {
  margin-bottom: 30rpx;
}

.action-toggle {
  width: 100%;
  padding: 25rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s ease;
}

.action-toggle.active {
  background: #667eea;
  color: white;
  border-color: transparent;
}

/* AI建议区域 */
.ai-suggestions {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.suggestion-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.suggestion-item:active {
  border-color: #667eea;
  background: #f0f4ff;
}

.suggestion-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.suggestion-content {
  flex: 1;
}

.suggestion-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.suggestion-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.suggestion-action {
  padding: 10rpx 20rpx;
  background: #667eea;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: white;
  padding: 60rpx;
  border-radius: 20rpx;
  text-align: center;
  min-width: 300rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 30rpx;
}

.loading-text {
  display: block;
  font-size: 28rpx;
  color: #333;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}