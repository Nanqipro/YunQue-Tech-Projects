/* pages/history/history.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 筛选区域 */
.filter-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.filter-tabs {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  overflow-x: auto;
}

.filter-tab {
  padding: 15rpx 30rpx;
  background: #f8f9fa;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: #667eea;
  color: white;
}

.sort-section {
  display: flex;
  justify-content: flex-end;
}

.sort-picker {
  display: flex;
  align-items: center;
  padding: 15rpx 25rpx;
  background: #f8f9fa;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #666;
}

.sort-text {
  margin-right: 10rpx;
}

.sort-icon {
  font-size: 20rpx;
}

/* 历史记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  background: white;
  border-radius: 16rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 50rpx;
}

.empty-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 28rpx;
}

/* 历史记录项 */
.history-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.history-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.item-images {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.image-container {
  flex: 1;
  text-align: center;
}

.history-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
}

.image-label {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.arrow-icon {
  font-size: 32rpx;
  color: #667eea;
  margin: 0 30rpx;
}

.item-info {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.process-type {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.process-time {
  font-size: 24rpx;
  color: #999;
}

.info-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.process-desc {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.process-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.process-status.completed {
  background: #e8f5e8;
  color: #4caf50;
}

.process-status.processing {
  background: #fff3e0;
  color: #ff9800;
}

.process-status.failed {
  background: #ffebee;
  color: #f44336;
}

.item-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  border: 2rpx solid #e0e0e0;
  background: white;
  color: #666;
}

.action-btn.preview {
  border-color: #667eea;
  color: #667eea;
}

.action-btn.download {
  border-color: #4caf50;
  color: #4caf50;
}

.action-btn.share {
  border-color: #ff9800;
  color: #ff9800;
}

.action-btn.delete {
  border-color: #f44336;
  color: #f44336;
}

/* 加载更多 */
.load-more {
  text-align: center;
  margin-top: 30rpx;
}

.load-more-btn {
  width: 100%;
  padding: 25rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.load-more-btn.loading {
  background: #ccc;
}

.no-more {
  text-align: center;
  padding: 40rpx;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
}

/* 批量操作 */
.batch-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  border-top: 1rpx solid #e0e0e0;
  z-index: 1000;
}

.batch-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.batch-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.batch-cancel {
  padding: 10rpx 20rpx;
  background: #f8f9fa;
  color: #666;
  border: none;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.batch-buttons {
  display: flex;
  gap: 20rpx;
}

.batch-btn {
  flex: 1;
  padding: 25rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
}

.batch-btn.download {
  background: #4caf50;
  color: white;
}

.batch-btn.delete {
  background: #f44336;
  color: white;
}

/* 浮动操作按钮 */
.fab-container {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  z-index: 999;
}

.fab-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  font-size: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.4);
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: white;
  padding: 60rpx;
  border-radius: 20rpx;
  text-align: center;
  min-width: 300rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 30rpx;
}

.loading-text {
  display: block;
  font-size: 28rpx;
  color: #333;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}